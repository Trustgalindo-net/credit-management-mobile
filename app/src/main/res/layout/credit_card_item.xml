<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardItemCard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/colorAccent"
    app:cardElevation="4dp">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_weight=".2"
            android:src="@drawable/logo"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:gravity="center"
            android:layout_weight=".6"
            android:padding="8dp"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/cardItemName"
                style="@style/AppTheme.WhiteTextView"
                android:text="Bancomer oro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/cardItemRegistrationDate"
                android:textSize="12sp"
                style="@style/AppTheme.WhiteTextView"
                android:text="Registration date 19/12/2016"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <TextView
            android:id="@+id/cardItemSalary"
            android:gravity="center"
            android:textSize="20sp"
            android:text="$ 1589"
            android:layout_weight=".2"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
    </LinearLayout>

</android.support.v7.widget.CardView>